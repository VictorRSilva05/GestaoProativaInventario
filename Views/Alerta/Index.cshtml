@model IEnumerable<GestaoProativaInventario.Models.Alerta>

@{
    ViewData["Title"] = "Alertas e Notificações";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Alertas e Notificações</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <button type="button" class="btn btn-sm btn-outline-secondary" onclick="location.reload();">Atualizar Alertas</button>
    </div>
</div>

<div class="row">
    @foreach (var item in Model.Where(a => !a.Resolvido))
    {
        var cardClass = "";
        var iconClass = "";
        switch (item.Tipo)
        {
            case "Ruptura Imediata":
                cardClass = "border-danger";
                iconClass = "bi bi-exclamation-triangle-fill text-danger";
                break;
            case "Excesso de Estoque":
                cardClass = "border-warning";
                iconClass = "bi bi-info-circle-fill text-warning";
                break;
            case "Produto Parado":
                cardClass = "border-info";
                iconClass = "bi bi-hourglass-split text-info";
                break;
            case "Produto Vencido":
                cardClass = "border-dark";
                iconClass = "bi bi-calendar-x-fill text-dark";
                break;
            default:
                cardClass = "border-secondary";
                iconClass = "bi bi-bell-fill text-secondary";
                break;
        }

        <div class="col-md-4 mb-4">
            <div class="card @cardClass">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="@iconClass me-2"></i>@item.Tipo</h5>
                    <small class="text-muted">@item.DataGeracao.ToString("dd/MM/yyyy HH:mm")</small>
                </div>
                <div class="card-body">
                    <h6 class="card-title">@item.Produto.Nome</h6>
                    <p class="card-text">@item.Mensagem</p>
                    <form asp-action="MarcarResolvido" method="post">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-sm btn-success"><i class="bi bi-check-circle"></i> Marcar como Resolvido</button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any(a => !a.Resolvido))
{
    <div class="alert alert-success" role="alert">
        Nenhum alerta ativo no momento. Tudo certo!
    </div>
}

