@{
    ViewData["Title"] = "Importação de Dados";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Importação de Dados de Vendas (CSV)</h1>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                Upload de Arquivo CSV
            </div>
            <div class="card-body">
                <form asp-action="UploadCsv" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="file" class="form-label">Selecione o arquivo CSV:</label>
                        <input type="file" name="file" id="file" class="form-control" accept=".csv" required />
                    </div>
                    <button type="submit" class="btn btn-primary">Importar Dados</button>
                </form>

                @if (ViewBag.Message != null)
                {
                    <div class="mt-3 alert alert-info" role="alert">
                        @ViewBag.Message
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
