<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Predistock</title>
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Integrativa.styles.css" asp-append-version="true" />
    
    <script src="https://unpkg.com/feather-icons"></script>
</head>
<body>
    
    <div class="app-container">
        
        <nav class="sidebar">
            <div class="sidebar-header">
                <a class="sidebar-brand" asp-area="" asp-controller="Dashboard" asp-action="Index">
                    <img src="@Url.Content("~/images/logo.png")" alt="predictstock logo"> 
                    <span>predistock</span>
                </a>
                <small class="sidebar-tagline">GESTÃO PREDITIVA</small>
            </div>
            
            <ul class="sidebar-nav">
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Dashboard" ? "active" : "")" asp-area="" asp-controller="Dashboard" asp-action="Index">
                        <i data-feather="grid"></i> Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Produto" ? "active" : "")" asp-area="" asp-controller="Produto" asp-action="Index">
                        <i data-feather="box"></i> Produtos
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Categoria" ? "active" : "")" asp-area="" asp-controller="Categoria" asp-action="Index">
                        <i data-feather="layers"></i> Categorias
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Previsao" ? "active" : "")" asp-area="" asp-controller="Previsao" asp-action="Index">
                        <i data-feather="trending-up"></i> Previsão
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Alerta" ? "active" : "")" asp-area="" asp-controller="Alerta" asp-action="Index">
                        <i data-feather="alert-triangle"></i> Alertas
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Importacao" ? "active" : "")" asp-area="" asp-controller="Importacao" asp-action="Index">
                        <i data-feather="upload"></i> Importação
                    </a>
                </li>
            </ul>

            <div class="sidebar-footer">
                </div>
        </nav>
        
        <div class="main-wrapper">

            <header class="mobile-header">
                <button class="mobile-toggle" id="sidebarToggle">
                    <i data-feather="menu"></i>
                </button>
                <a class="mobile-brand" asp-area="" asp-controller="Dashboard" asp-action="Index">
                    <img src="@Url.Content("~/images/logo.png")" alt="predictstock logo">
                    <span>predistock</span>
                </a>
            </header>
            <main class="main-content" role="main">
                <div class="container-fluid"> 
                    @RenderBody()
                </div>
            </main>

        </div> </div>

    <div class="sidebar-overlay" id="sidebarOverlay"></div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <script>
      feather.replace()

      /* javascript para responsividade */
      (function() {
            var toggleBtn = document.getElementById('sidebarToggle');
            var overlay = document.getElementById('sidebarOverlay');
            var appContainer = document.querySelector('.app-container');

            if (toggleBtn) {
                toggleBtn.addEventListener('click', function() {
                    appContainer.classList.toggle('sidebar-open');
                });
            }

            if (overlay) {
                overlay.addEventListener('click', function() {
                    appContainer.classList.remove('sidebar-open');
                });
            }
        })();
      /* fim javascript */
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>